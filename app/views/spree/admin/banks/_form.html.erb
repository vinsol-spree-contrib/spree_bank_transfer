<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @bank } %>

<%= form_for [:admin, @bank] do |f| %>
  <div data-hook="admin_inside_bank_form" class="row">
    <div class="alpha five columns">
      <%= f.field_container :name do %>
        <%= f.label :name, Spree.t(:name) %> <span class="required">*</span><br />
        <%= f.error_message_on :name, :class => 'fullwidth title' %>
        <%= f.text_field :name, :class => 'fullwidth' %>
      <% end %>

      <%= f.field_container :account_no do %>
        <%= f.label :account_no, Spree.t(:account_no) %><span class="required">*</span><br />
        <%= f.text_field :account_no, :class => 'fullwidth' %>
      <% end %>
      
      <%= f.field_container :bank_code do %>
        <%= f.label :bank_code, Spree.t(:bank_code) %><span class="required">*</span><br />
        <%= f.text_field :bank_code, :class => 'fullwidth' %>
      <% end %>
      
      <%= f.field_container :iban do %>
        <%= f.label :iban, Spree.t(:iban) %><span class="required">*</span><br />
        <%= f.text_field :iban, :class => 'fullwidth' %>
      <% end %>
      
      <%= f.field_container :bic do %>
        <%= f.label :bic, Spree.t(:bic) %><span class="required">*</span><br />
        <%= f.text_field :bic, :class => 'fullwidth' %>
      <% end %>
      
      <%= f.field_container :infos  do %>
        <%= f.label :infos, Spree.t(:infos) %><span class="required">*</span><br />
        <%= f.text_field :infos, :class => 'fullwidth' %>
      <% end %>
      
      
      
      <%= f.field_container :active do %>
        <%= f.check_box :active %>
        <%= f.label :active, Spree.t(:active) %>
      <% end %>

      <%= f.submit %>

    </div>
  </div>
<% end %>